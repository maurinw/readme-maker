<div class="navbar">
  <!-- Left Side -->
  <div class="logo">
    <a href="/">ReadmeMaker</a>
  </div>
  <!-- Right Side -->
  <div class="nav-items">
    <div class="toggle-box">
      <i class="fa-solid fa-sun"></i>
      <label class="switch">
        <input type="checkbox" role="switch" id="themeSwitch" />
        <span class="slider"></span>
      </label>
      <i class="fa-solid fa-moon"></i>
    </div>
    <div class="nav-links">
      <% if (user) { %>
      <button class="button" id="saveReadmeBtn">Save Readme</button>
      <a class="button" href="/profile">Profile</a>
      <a class="button" href="/auth/logout">Logout</a>
      <% } else { %>
      <a class="button" href="/auth/login">Login</a>
      <a class="button" href="/auth/register">Register</a>
      <% } %>
    </div>
  </div>
</div>
