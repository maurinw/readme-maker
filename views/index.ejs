<div class="editor-layout">
  <!-- Card for Components -->
  <div class="card column components">
    <div class="card-header">
      <h2>Components</h2>
    </div>
    <div class="card-body">
      <div>
        <h5>Selected Components</h5>
        <ul id="selectedList"></ul>
      </div>
      <div>
        <h5>Available Components</h5>
        <ul id="availableList"></ul>
      </div>
    </div>
  </div>

  <!-- Card for Editor -->
  <div class="card column editor">
    <div class="card-header">
      <h2>Editor</h2>
    </div>
    <div class="card-body">
      <textarea id="editorTextarea" placeholder="Edit content..."></textarea>
    </div>
  </div>

  <!-- Card for Preview -->
  <div class="card column preview">
    <div class="card-header preview-header">
      <h2>Preview</h2>
      <% if (user) { %>
      <button class="button" id="saveReadmeBtn">Save Readme</button>
      <% } %>
    </div>
    <div class="card-body">
      <div id="previewArea">
        <p>Preview will be displayed here.</p>
      </div>
    </div>
  </div>
</div>
